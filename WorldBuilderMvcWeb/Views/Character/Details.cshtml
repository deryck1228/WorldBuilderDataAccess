@model WorldBuilderMvcWeb.Models.Character

@{
    ViewData["Title"] = "Character Details";
}

<h1>Character Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Race
        </dt>
        <dd class="col-sm-10">
            @Model.Race
        </dd>
        <dt class="col-sm-2">
            Class
        </dt>
        <dd class="col-sm-10">
            @Model.Class
        </dd>
        <dt class="col-sm-2">
            Level
        </dt>
        <dd class="col-sm-10">
            @Model.Level
        </dd>
        <dt class="col-sm-2">
            Background
        </dt>
        <dd class="col-sm-10">
            @Model.Background
        </dd>
        <dt class="col-sm-2">
            Dm Notes
        </dt>
        <dd class="col-sm-10">
            @Model.DmNotes
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.CharacterId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
